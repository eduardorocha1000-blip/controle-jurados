<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <style>
        body { height: 100vh; overflow: hidden; }
        .cedulas-scroll { overflow-y: auto; }
        @media (max-width: 768px) { body { overflow: auto; height: auto; } .cedulas-scroll { height: auto; } }
    </style>
</head>
<body>
    <!-- Cabe√ßalho -->
    <header class="header-custom">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-auto">
                    <img src="/images/logo-tjsc.png" alt="Logo TJSC" class="header-logo">
                </div>
                <div class="col">
                    <h1 class="header-title">VARA √öNICA DA COMARCA DE CAPIVARI DE BAIXO</h1>
                    <p class="header-subtitle">by Eduardo Motta Rocha da Silva</p>
                </div>
                <div class="col-auto">
                    <% if (typeof user !== 'undefined' && user) { %>
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            üë§ <%= user.nome %>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/perfil">‚öôÔ∏è Perfil</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form method="POST" action="/login/logout" class="d-inline">
                                    <button type="submit" class="dropdown-item">üö™ Sair</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </header>

    <div class="main-container cedulas-scroll" style="height: 604px; overflow-y: auto; flex: 1;">
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="p-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">üìä Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/juizes">‚öñÔ∏è Ju√≠zes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/instituicoes">üè¢ Institui√ß√µes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/jurados">üë• Jurados</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/indicacoes">üìã Indica√ß√µes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/sorteios">üé≤ Sorteios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/ultimo-conselho">üôã √öltimo Conselho</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/cedulas">üé´ C√©dulas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/editais">üìÑ Editais</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/emails">üìß E-mails</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/relatorios">üìà Relat√≥rios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/backup">üíæ Backup</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/usuarios"><i class="fas fa-user-cog btn-icon"></i>Usu√°rios</a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Conte√∫do Principal -->
        <main class="main-content">
            <div class="container-fluid">
                <!-- Cabe√ßalho -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h2>C√©dulas</h2>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Mensagens -->
                <% if (typeof flash !== 'undefined' && flash) { %>
                    <% if (flash.success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        ‚úÖ <%= flash.success %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                    <% } %>
                    <% if (flash.error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        ‚ùå <%= flash.error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                    <% } %>
                <% } %>

                <!-- Filtros e A√ß√µes -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <div class="input-group">
                                    <input type="text" class="form-control" id="searchInput" placeholder="Buscar por sorteio ou processo...">
                                    <button class="btn btn-outline-secondary" type="button" onclick="buscarCedulas()">
                                        üîç Buscar
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-6 text-md-end">
                                <div class="btn-group" role="group">
                                    <button class="btn btn-primary" onclick="gerarCedulas()">
                                        Gerar C√©dulas
                                    </button>
                                    <button class="btn btn-delete btn-sm" onclick="imprimirCedulas()" title="Imprimir">üóëÔ∏è</button>
                                    <button class="btn btn-info" onclick="exportarCedulas()">
                                        Exportar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Estat√≠sticas -->
                <div class="row mb-4 stats-cards">
                    <div class="col-md-3 mb-3">
                        <div class="card card-stat h-100">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-ticket-alt fa-2x text-primary"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h5 class="card-title mb-0">Total</h5>
                                        <h3 class="mb-0"><%= typeof totalCedulas !== 'undefined' ? totalCedulas : 0 %></h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3 mb-3">
                        <div class="card card-stat h-100">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-check-circle fa-2x text-success"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h5 class="card-title mb-0">Geradas</h5>
                                        <h3 class="mb-0"><%= typeof cedulasGeradas !== 'undefined' ? cedulasGeradas : 0 %></h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3 mb-3">
                        <div class="card card-stat h-100">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-print fa-2x text-info"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h5 class="card-title mb-0">Impressas</h5>
                                        <h3 class="mb-0"><%= typeof cedulasImpressas !== 'undefined' ? cedulasImpressas : 0 %></h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3 mb-3">
                        <div class="card card-stat h-100">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-random fa-2x text-warning"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h5 class="card-title mb-0">Sorteios</h5>
                                        <h3 class="mb-0"><%= typeof totalSorteios !== 'undefined' ? totalSorteios : 0 %></h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sele√ß√£o de Sorteio -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            üé≤ Selecionar Sorteio
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="sorteioSelect" class="form-label">Sorteio para Gerar C√©dulas</label>
                                <select class="form-select" id="sorteioSelect">
                                    <option value="">Selecione um sorteio...</option>
                                    <% if (typeof sorteios !== 'undefined' && sorteios) { %>
                                        <% sorteios.forEach(sorteio => { %>
                                            <option value="<%= sorteio.id %>" data-processo="<%= sorteio.numero_processo %>" data-data="<%= sorteio.data_juri %>">
                                                <%= sorteio.numero_processo %> - <%= new Date(sorteio.data_juri).toLocaleDateString('pt-BR') %>
                                            </option>
                                        <% }) %>
                                    <% } %>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="quantidadeCedulas" class="form-label">Quantidade de C√©dulas</label>
                                <input type="number" class="form-control" id="quantidadeCedulas" min="1" max="1000" value="100">
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tabela de C√©dulas -->
                <div class="card">
                    <div class="card-body">
                        <% if (typeof cedulas !== 'undefined' && cedulas && cedulas.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Sorteio</th>
                                        <th>Processo</th>
                                        <th>Data J√∫ri</th>
                                        <th>N√∫mero C√©dula</th>
                                        <th>Status</th>
                                        <th>Data Gera√ß√£o</th>
                                        <th>A√ß√µes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% cedulas.forEach(cedula => { %>
                                    <tr>
                                        <td><%= cedula.sorteio_id %></td>
                                        <td><%= cedula.numero_processo %></td>
                                        <td><%= new Date(cedula.data_juri).toLocaleDateString('pt-BR') %></td>
                                        <td><%= cedula.numero_cedula %></td>
                                        <td>
                                            <% 
                                            let badgeClass = 'bg-secondary';
                                            if (cedula.status === 'Gerada') badgeClass = 'bg-success';
                                            else if (cedula.status === 'Impressa') badgeClass = 'bg-info';
                                            else if (cedula.status === 'Utilizada') badgeClass = 'bg-warning';
                                            %>
                                            <span class="badge <%= badgeClass %>">
                                                <%= cedula.status %>
                                            </span>
                                        </td>
                                        <td><%= new Date(cedula.created_at).toLocaleDateString('pt-BR') %></td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <button class="btn btn-outline-primary" onclick="visualizarCedula(<%= cedula.id %>)" title="Visualizar">
                                                    üëÅÔ∏è
                                                </button>
                                                <button class="btn btn-delete btn-sm" onclick="imprimirCedula(<%= cedula.id %>)" title="Imprimir">üóëÔ∏è</button>
                                                <button class="btn btn-outline-danger" onclick="excluirCedula(<%= cedula.id %>)" title="Excluir">
                                                    üóëÔ∏è
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                        <% } else { %>
                        <div class="text-center py-5">
                            <i class="fas fa-ticket-alt fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Nenhuma c√©dula gerada</h5>
                            <p class="text-muted">Selecione um sorteio e gere as c√©dulas para impress√£o.</p>
                            <button class="btn btn-primary" onclick="gerarCedulas()">
                                ‚ûï Gerar Primeiras C√©dulas
                            </button>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Rodap√© -->
    <footer class="footer-custom">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0">Total de Jurados: <span id="total-jurados">-</span></p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">Total de Institui√ß√µes: <span id="total-instituicoes">-</span></p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        function ajustarAlturaScroll() {
            const header = document.querySelector('.header-custom');
            const footer = document.querySelector('.footer-custom');
            const container = document.querySelector('.cedulas-scroll');
            if (!header || !footer || !container) return;
            const h = header.getBoundingClientRect().height;
            const f = footer.getBoundingClientRect().height;
            const altura = window.innerHeight - (h + f);
            container.style.height = altura + 'px';
            container.style.overflowY = 'auto';
        }
        window.addEventListener('load', ajustarAlturaScroll);
        window.addEventListener('resize', ajustarAlturaScroll);

        // Fun√ß√µes JavaScript
        function buscarCedulas() {
            const termo = document.getElementById('searchInput').value;
            if (termo.trim()) {
                window.location.href = `/cedulas?busca=${encodeURIComponent(termo)}`;
            }
        }

        function gerarCedulas() {
            const sorteioId = document.getElementById('sorteioSelect').value;
            const quantidade = document.getElementById('quantidadeCedulas').value;
            
            if (!sorteioId) {
                alert('Selecione um sorteio antes de gerar as c√©dulas.');
                return;
            }
            
            fetch('/cedulas/gerar', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    sorteio_id: sorteioId,
                    quantidade: quantidade
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert(`C√©dulas geradas com sucesso! ${data.geradas} c√©dulas criadas.`);
                    location.reload();
                } else {
                    alert('Erro ao gerar c√©dulas: ' + data.message);
                }
            })
            .catch(error => {
                alert('Erro ao gerar c√©dulas: ' + error.message);
            });
        }

        function imprimirCedulas() {
            const sorteioId = document.getElementById('sorteioSelect').value;
            if (!sorteioId) {
                alert('Selecione um sorteio antes de imprimir as c√©dulas.');
                return;
            }
            
            window.open(`/cedulas/imprimir/${sorteioId}`, '_blank');
        }

        function exportarCedulas() {
            const sorteioId = document.getElementById('sorteioSelect').value;
            if (!sorteioId) {
                alert('Selecione um sorteio antes de exportar as c√©dulas.');
                return;
            }
            
            window.location.href = `/cedulas/exportar/${sorteioId}`;
        }

        function visualizarCedula(id) {
            window.open(`/cedulas/${id}/visualizar`, '_blank');
        }

        function imprimirCedula(id) {
            window.open(`/cedulas/${id}/imprimir`, '_blank');
        }

        function excluirCedula(id) {
            fetch(`/cedulas/${id}`, {
                method: 'DELETE'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('C√©dula exclu√≠da com sucesso!');
                    location.reload();
                } else {
                    alert('Erro ao excluir c√©dula: ' + data.message);
                }
            })
            .catch(error => {
                alert('Erro ao excluir c√©dula: ' + error.message);
            });
        }

        document.addEventListener('DOMContentLoaded', function() {
            ajustarAlturaScroll();

            // Busca em tempo real
            const searchInput = document.getElementById('searchInput');
            if (searchInput) {
                searchInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        buscarCedulas();
                    }
                });
            }

            // Fetch total de jurados e institui√ß√µes para o rodap√©
            fetch('/api/stats')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('total-jurados').textContent = data.totalJurados;
                    document.getElementById('total-instituicoes').textContent = data.totalInstituicoes;
                })
                .catch(error => console.error('Erro ao buscar estat√≠sticas:', error));
        });
    </script>
</body>
</html>
