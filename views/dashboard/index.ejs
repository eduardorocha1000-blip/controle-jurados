    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // M√°scaras para campos
        document.addEventListener('DOMContentLoaded', function() {
            // M√°scara CPF
            const cpfInputs = document.querySelectorAll('input[name="cpf"]');
            cpfInputs.forEach(input => {
                input.addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\D/g, '');
                    value = value.replace(/(\d{3})(\d)/, '$1.$2');
                    value = value.replace(/(\d{3})(\d)/, '$1.$2');
                    value = value.replace(/(\d{3})(\d{1,2})$/, '$1-$2');
                    e.target.value = value;
                });
            });

            // M√°scara telefone
            const telefoneInputs = document.querySelectorAll('input[name="telefone"], input[name="contato_telefone"]');
            telefoneInputs.forEach(input => {
                input.addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\D/g, '');
                    value = value.replace(/(\d{2})(\d)/, '($1) $2');
                    value = value.replace(/(\d{5})(\d)/, '$1-$2');
                    e.target.value = value;
                });
            });

            // M√°scara CNPJ
            const cnpjInputs = document.querySelectorAll('input[name="cnpj"]');
            cnpjInputs.forEach(input => {
                input.addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\D/g, '');
                    value = value.replace(/(\d{2})(\d)/, '$1.$2');
                    value = value.replace(/(\d{3})(\d)/, '$1.$2');
                    value = value.replace(/(\d{3})(\d)/, '$1/$2');
                    value = value.replace(/(\d{4})(\d{1,2})$/, '$1-$2');
                    e.target.value = value;
                });
            });

            // M√°scara CEP
            const cepInputs = document.querySelectorAll('input[name="cep"]');
            cepInputs.forEach(input => {
                input.addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\D/g, '');
                    value = value.replace(/(\d{5})(\d)/, '$1-$2');
                    e.target.value = value;
                });
            });

            // Converter campos para mai√∫sculo (exceto email, senha, telefone, etc.)
            const textInputs = document.querySelectorAll('input[type="text"]:not([name*="email"]):not([name*="senha"]):not([name*="password"]):not([name*="telefone"]):not([name*="cpf"]):not([name*="cnpj"]):not([name*="cep"])');
            textInputs.forEach(input => {
                input.addEventListener('input', function(e) {
                    e.target.value = e.target.value.toUpperCase();
                });
            });

            // Carregar totais no rodap√©
            fetch('/api/stats')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('total-jurados').textContent = data.totalJurados || 0;
                    document.getElementById('total-instituicoes').textContent = data.totalInstituicoes || 0;
                })
                .catch(error => console.error('Erro ao carregar estat√≠sticas:', error));
        });

        // Upload de logo do cabe√ßalho
        document.getElementById('header-logo').addEventListener('click', function() {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = 'image/*';
            input.onchange = function(e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        document.getElementById('header-logo').src = e.target.result;
                        // Salvar no localStorage
                        localStorage.setItem('header-logo', e.target.result);
                    };
                    reader.readAsDataURL(file);
                }
            };
            input.click();
        });

        // Carregar logo salvo
        const savedLogo = localStorage.getItem('header-logo');
        if (savedLogo) {
            document.getElementById('header-logo').src = savedLogo;
        }

        // Regras de Popula√ß√£o
        (function(){
            const input = document.getElementById('populacaoInput');
            const regra = document.getElementById('populacaoRegra');
            if (!input || !regra) return;
            function atualizar() {
                const val = parseInt(input.value, 10);
                if (Number.isNaN(val)) { regra.textContent = ''; return; }
                if (val > 1000000) {
                    regra.textContent = 'Devem ser alistado de 800 a 1.500 jurados';
                } else if (val > 100000) {
                    regra.textContent = 'Devem ser alistado de 300 a 700 jurados';
                } else {
                    regra.textContent = 'Devem ser alistado de 80 a 400 jurados';
                }
                localStorage.setItem('dashboard-populacao', String(val));
            }
            input.addEventListener('input', atualizar);
            // Carregar valor persistido
            const salvo = localStorage.getItem('dashboard-populacao');
            if (salvo) {
                input.value = salvo;
                atualizar();
            }
            // Tentar preencher automaticamente via IBGE
            try {
                fetch('https://servicodados.ibge.gov.br/api/v1/localidades/municipios?nome=Capivari%20de%20Baixo')
                    .then(r => r.json())
                    .then(list => {
                        if (Array.isArray(list) && list.length > 0) {
                            const id = list[0].id;
                            return fetch(`https://servicodados.ibge.gov.br/api/v1/projecoes/populacao/${id}`);
                        }
                        return null;
                    })
                    .then(r => r ? r.json() : null)
                    .then(data => {
                        if (data && data.projecao && data.projecao.populacao) {
                            const val = parseInt(data.projecao.populacao, 10);
                            if (!Number.isNaN(val)) {
                                input.value = val;
                                atualizar();
                            }
                        }
                    })
                    .catch(() => {});
            } catch (_) {}
        })();
    </script>
</body>
