<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css?v=<%= Date.now() %>">
</head>
<body>
    <!-- Cabe√ßalho -->
    <header class="header-custom">
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <img src="/images/logo-tjsc.png" alt="Logo TJSC" class="header-logo me-3">
                    <div>
                        <h1 class="header-title">Controle de Jurados</h1>
                        <p class="header-subtitle">Comarca de Capivari de Baixo</p>
                    </div>
                </div>
                <% if (typeof user !== 'undefined' && user) { %>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                        üë§ <%= user.nome %>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                        <li><a class="dropdown-item" href="/perfil">‚öôÔ∏è Perfil</a></li>
                        <% if (user.perfil === 'Administrador') { %>
                        <li><a class="dropdown-item" href="/usuarios">üë• Usu√°rios</a></li>
                        <% } %>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form action="/login/logout" method="POST" class="d-inline">
                                <button type="submit" class="dropdown-item">üö™ Sair</button>
                            </form>
                        </li>
                    </ul>
                </div>
                <% } %>
            </div>
        </div>
    </header>

    <div class="main-container">
        <% if (typeof user !== 'undefined' && user) { %>
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="p-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'dashboard' ? 'active' : '' %>" href="/dashboard">
                            üìä Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'juizes' ? 'active' : '' %>" href="/juizes">
                            ‚öñÔ∏è Ju√≠zes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'instituicoes' ? 'active' : '' %>" href="/instituicoes">
                            üè¢ Institui√ß√µes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'jurados' ? 'active' : '' %>" href="/jurados">
                            üë• Jurados
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'indicacoes' ? 'active' : '' %>" href="/indicacoes">
                            üìã Indica√ß√µes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'sorteios' ? 'active' : '' %>" href="/sorteios">
                            üé≤ Sorteios
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'cedulas' ? 'active' : '' %>" href="/cedulas">
                            üé´ C√©dulas
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'editais' ? 'active' : '' %>" href="/editais">
                            üìÑ Editais
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'emails' ? 'active' : '' %>" href="/emails">
                            üìß E-mails
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'relatorios' ? 'active' : '' %>" href="/relatorios">
                            üìä Relat√≥rios
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'backup' ? 'active' : '' %>" href="/backup">
                            üíæ Backup
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <% } %>

        <!-- Conte√∫do Principal -->
        <main class="main-content">
            <% if (typeof messages !== 'undefined' && messages) { %>
                <% if (messages.success && messages.success.length > 0) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    ‚úÖ <%= messages.success[0] %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                <% } %>
                <% if (messages.error && messages.error.length > 0) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    ‚ùå <%= messages.error[0] %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                <% } %>
            <% } %>

            <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle btn-icon"></i><%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            <% } %>

            <div class="container-fluid">
                <!-- Cabe√ßalho -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h2><%= typeof indicacao !== 'undefined' && indicacao.id ? 'Editar Indica√ß√£o' : 'Nova Indica√ß√£o' %></h2>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Formul√°rio -->
                <div class="row">
                    <div class="col-lg-8">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Dados da Indica√ß√£o</h5>
                            </div>
                            <div class="card-body">
                                <form method="POST" action="<%= typeof action !== 'undefined' ? action : '/indicacoes' %>" enctype="multipart/form-data">
                                    <% if (typeof indicacao !== 'undefined' && indicacao && indicacao.id) { %>
                                    <input type="hidden" name="_method" value="PUT">
                                    <% } %>
                                    
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label for="instituicao_id" class="form-label">Institui√ß√£o *</label>
                                            <select class="form-select" id="instituicao_id" name="instituicao_id" required>
                                                <option value="">Selecione...</option>
                                                <% for (let i = 0; i < instituicoes.length; i++) { %>
                                                    <option value="<%= instituicoes[i].id %>" 
                                                            <%= typeof indicacao !== 'undefined' && indicacao.instituicao_id == instituicoes[i].id ? 'selected' : '' %>>
                                                        <%= instituicoes[i].nome %>
                                                    </option>
                                                <% } %>
                                            </select>
                                        </div>
                                        
                                        <div class="col-md-6 mb-3">
                                            <label for="ano_referencia" class="form-label">Ano de Refer√™ncia *</label>
                                            <input type="number" class="form-control" id="ano_referencia" name="ano_referencia" 
                                                   value="<%= typeof indicacao !== 'undefined' && indicacao.ano_referencia ? indicacao.ano_referencia : new Date().getFullYear() + 1 %>"
                                                   min="2020" max="2030" required>
                                        </div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label for="quantidade" class="form-label">Quantidade de Cidad√£os * <small class="text-muted">(preenchido automaticamente)</small></label>
                                            <input type="number" class="form-control" id="quantidade" name="quantidade" 
                                                   value="<%= typeof indicacao !== 'undefined' && indicacao.quantidade ? indicacao.quantidade : '' %>"
                                                   min="1" max="99" required>
                                            <div class="form-text">Este campo √© preenchido automaticamente baseado na institui√ß√£o selecionada.</div>
                                        </div>
                                        
                                        <div class="col-md-6 mb-3">
                                            <label for="prazo_envio" class="form-label">Prazo para Envio *</label>
                                            <input type="date" class="form-control" id="prazo_envio" name="prazo_envio" 
                                                   value="<%= typeof indicacao !== 'undefined' && indicacao.prazo_envio ? indicacao.prazo_envio : '' %>" required>
                                        </div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label for="status" class="form-label">Status *</label>
                                            <select class="form-select" id="status" name="status" required>
                                                <option value="pendente" <%= typeof indicacao !== 'undefined' && indicacao.status && indicacao.status !== 'pendente' && indicacao.status !== 'recebida' && indicacao.status !== 'validada' ? 'selected' : (typeof indicacao === 'undefined' || !indicacao.status || indicacao.status === 'pendente' ? 'selected' : '') %>>Pendente</option>
                                                <option value="recebida" <%= typeof indicacao !== 'undefined' && indicacao.status === 'recebida' ? 'selected' : '' %>>Recebida</option>
                                                <option value="validada" <%= typeof indicacao !== 'undefined' && indicacao.status === 'validada' ? 'selected' : '' %>>Validada</option>
                                            </select>
                                        </div>
                                        
                                        <div class="col-md-6 mb-3">
                                            <label for="arquivo_pdf" class="form-label">Arquivo PDF <small class="text-muted">(opcional)</small></label>
                                            <input type="file" class="form-control" id="arquivo_pdf" name="arquivo_pdf" accept=".pdf">
                                            <div class="form-text">Apenas arquivos PDF s√£o aceitos. Tamanho m√°ximo: 5MB.</div>
                                            <% if (typeof indicacao !== 'undefined' && indicacao.arquivo_lista) { %>
                                            <div class="mt-2">
                                                <small class="text-muted">Arquivo atual: </small>
                                                <a href="/uploads/<%= indicacao.arquivo_lista %>" target="_blank" class="text-decoration-none">
                                                    üìÑ <%= indicacao.arquivo_lista %>
                                                </a>
                                            </div>
                                            <% } %>
                                        </div>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="observacoes" class="form-label">Observa√ß√µes</label>
                                        <textarea class="form-control" id="observacoes" name="observacoes" rows="4"><%= typeof indicacao !== 'undefined' && indicacao.observacoes ? indicacao.observacoes : '' %></textarea>
                                    </div>
                                    
                                    <div class="d-flex gap-2">
                                        <button type="submit" class="btn btn-save">üíæ</button>
                                        <a href="/indicacoes" class="btn btn-back">‚¨ÖÔ∏è</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Painel Lateral -->
                    <div class="col-lg-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Informa√ß√µes</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <h6>üìã Sobre Indica√ß√µes</h6>
                                    <p class="text-muted small mb-0">
                                        As indica√ß√µes s√£o solicita√ß√µes feitas √†s institui√ß√µes para fornecerem listas de cidad√£os exemplares que podem servir como jurados.
                                    </p>
                                </div>
                                
                                <div class="mb-3">
                                    <h6>üìÖ Prazo de Envio</h6>
                                    <p class="text-muted small mb-0">
                                        Defina o prazo limite para que a institui√ß√£o envie a lista de cidad√£os indicados.
                                    </p>
                                </div>
                                
                                <div class="mb-3">
                                    <h6>üìÑ Arquivo PDF</h6>
                                    <p class="text-muted small mb-0">
                                        Voc√™ pode anexar documentos relacionados √† indica√ß√£o, como of√≠cios ou comunica√ß√µes.
                                    </p>
                                </div>
                                
                                <div class="alert alert-info">
                                    <small>
                                        <strong>üí° Dica:</strong> A quantidade de cidad√£os √© preenchida automaticamente baseada no cadastro da institui√ß√£o selecionada.
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Rodap√© -->
    <footer class="footer-custom mt-5">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0">¬© 2025 Tribunal de Justi√ßa de Santa Catarina - TJSC</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">Sistema de Controle de Jurados - Comarca de Capivari de Baixo</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Preencher prazo_envio automaticamente se vazio
            const prazoInput = document.getElementById('prazo_envio');
            if (prazoInput && !prazoInput.value) {
                const hoje = new Date();
                const prazo = new Date(hoje.getTime() + (30 * 24 * 60 * 60 * 1000)); // 30 dias
                prazoInput.value = prazo.toISOString().split('T')[0];
            }
            
            // Preencher quantidade automaticamente baseada na institui√ß√£o selecionada
            const instituicaoSelect = document.getElementById('instituicao_id');
            const quantidadeInput = document.getElementById('quantidade');
            
            // Dados das institui√ß√µes (quantidade de cidad√£os)
            const instituicoesData = {
                <% for (let i = 0; i < instituicoes.length; i++) { %>
                '<%= instituicoes[i].id %>': <%= instituicoes[i].quantidade || 10 %>,
                <% } %>
            };
            
            // Fun√ß√£o para atualizar quantidade quando institui√ß√£o mudar
            function atualizarQuantidade() {
                const instituicaoId = instituicaoSelect.value;
                if (instituicaoId && instituicoesData[instituicaoId]) {
                    const quantidadeAnterior = quantidadeInput.value;
                    quantidadeInput.value = instituicoesData[instituicaoId];
                    
                    // Feedback visual quando quantidade muda
                    if (quantidadeAnterior !== quantidadeInput.value) {
                        quantidadeInput.style.backgroundColor = '#d4edda';
                        setTimeout(() => {
                            quantidadeInput.style.backgroundColor = '';
                        }, 1000);
                    }
                }
            }
            
            // Event listener para mudan√ßa na sele√ß√£o da institui√ß√£o
            instituicaoSelect.addEventListener('change', atualizarQuantidade);
            
            // Preencher quantidade inicial se j√° houver institui√ß√£o selecionada
            if (instituicaoSelect.value) {
                atualizarQuantidade();
            }
        });
    </script>
</body>
</html>