<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <style>
        body { height: 100vh; overflow: hidden; }
        .indicacoes-scroll { height: calc(100vh - (var(--header-height) + var(--footer-height))); overflow-y: auto; }
        @media (max-width: 768px) { body { overflow: auto; height: auto; } .indicacoes-scroll { height: auto; } }
    </style>
</head>
<body>
    <!-- Cabe√ßalho -->
    <header class="header-custom">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-auto">
                    <img src="/images/logo-tjsc.png" alt="Logo TJSC" class="header-logo">
                </div>
                <div class="col">
                    <h1 class="header-title">VARA √öNICA DA COMARCA DE CAPIVARI DE BAIXO</h1>
                    <p class="header-subtitle">by Eduardo Motta Rocha da Silva</p>
                </div>
                <div class="col-auto">
                    <% if (typeof user !== 'undefined' && user) { %>
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            üë§ <%= user.nome %>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/perfil">‚öôÔ∏è Perfil</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form method="POST" action="/login/logout" class="d-inline">
                                    <button type="submit" class="dropdown-item">
                                        üö™ Sair
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </header>

    <div class="main-container">
        <!-- Sidebar -->
        <nav class="sidebar">
                <div class="p-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/dashboard">üìä Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/juizes">
                                ‚öñÔ∏è Ju√≠zes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/instituicoes">
                                üè¢ Institui√ß√µes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/jurados">
                                üë• Jurados
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/indicacoes">
                                üìã Indica√ß√µes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/sorteios">
                                üé≤ Sorteios
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/ultimo-conselho">üôã √öltimo Conselho</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/cedulas">
                                üé´ C√©dulas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/editais">
                                üìÑ Editais
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/emails">
                                üìß E-mails
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/relatorios">
                                üìà Relat√≥rios
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/backup">
                                üíæ Backup
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/usuarios">
                                <i class="fas fa-user-cog btn-icon"></i>Usu√°rios
                            </a>
                        </li>
                    </ul>
                </div>
        </nav>

        <!-- Conte√∫do Principal -->
        <main class="main-content">
            <div class="container-fluid">
                <% if (typeof messages !== 'undefined' && messages) { %>
                    <% if (messages.success && messages.success.length > 0) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        ‚úÖ <%= messages.success[0] %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                    <% } %>
                    <% if (messages.error && messages.error.length > 0) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        ‚ùå <%= messages.error[0] %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                    <% } %>
                <% } %>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2>Indica√ß√µes de Jurados</h2>
                    <div class="d-flex gap-2 align-items-center">
                        <a href="/indicacoes/novo" class="btn btn-primary d-flex align-items-center justify-content-center">‚ûï Nova Indica√ß√£o</a>
                    </div>
                </div>

                <!-- Estat√≠sticas -->
                <div class="row mb-4 stats-cards">
                    <div class="col-md-3 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <div class="text-primary fs-5">üìã</div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h5 class="card-title mb-0">Total</h5>
                                        <h3 class="mb-0"><%= typeof totalIndicacoes !== 'undefined' ? totalIndicacoes : 0 %></h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <div class="text-success fs-5">üü¢</div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h5 class="card-title mb-0">Processadas</h5>
                                        <h3 class="mb-0"><%= typeof indicacoesProcessadas !== 'undefined' ? indicacoesProcessadas : 0 %></h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <div class="text-danger fs-5">üî¥</div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h5 class="card-title mb-0">Pendentes</h5>
                                        <h3 class="mb-0"><%= typeof indicacoesPendentes !== 'undefined' ? indicacoesPendentes : 0 %></h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Filtros e A√ß√µes -->
                <div class="card mb-4">
                    <div class="card-body">
                        <form method="GET" action="/indicacoes" class="row g-3">
                            <div class="col-md-4">
                                <label for="busca" class="form-label">Buscar</label>
                                <input type="text" class="form-control" id="busca" name="busca" placeholder="Institui√ß√£o ou jurado..." value="<%= typeof busca !== 'undefined' ? busca : '' %>">
                            </div>
                            <div class="col-md-auto">
                                <label for="ano_referencia" class="form-label">Refer√™ncia</label>
                                <input type="number" class="form-control" id="ano_referencia" name="ano_referencia" placeholder="Ano" min="2000" max="2099" maxlength="4" size="4" style="width: 80px;" value="<%= typeof ano_referencia !== 'undefined' ? ano_referencia : '' %>">
                            </div>
                            <div class="col-md-auto">
                                <label for="solicitado_em" class="form-label">Solicitado Em</label>
                                <input type="date" class="form-control" id="solicitado_em" name="solicitado_em" style="width: 130px;" value="<%= typeof solicitado_em !== 'undefined' ? solicitado_em : '' %>">
                            </div>
                            <div class="col-md-auto">
                                <label for="data_limite" class="form-label">Data Limite</label>
                                <input type="date" class="form-control" id="data_limite" name="data_limite" style="width: 130px;" value="<%= typeof data_limite !== 'undefined' ? data_limite : '' %>">
                            </div>
                            <div class="col-md-2">
                                <label for="status" class="form-label">Status</label>
                                <select class="form-select" id="status" name="status" style="padding-right: 30px;">
                                    <option value="">Todos</option>
                                    <option value="Pendente" <%= typeof status !== 'undefined' && status === 'Pendente' ? 'selected' : '' %>>Pendente</option>
                                    <option value="Recebida" <%= typeof status !== 'undefined' && status === 'Recebida' ? 'selected' : '' %>>Recebida</option>
                                    <option value="Vencida" <%= typeof status !== 'undefined' && status === 'Vencida' ? 'selected' : '' %>>Vencida</option>
                                </select>
                            </div>
                            <div class="col-md-1 d-flex align-items-end">
                                <div class="d-flex gap-2 w-100">
                                    <button type="submit" class="btn btn-search" title="Buscar">üîç</button>
                                    <button type="button" class="btn btn-clear" onclick="limparPesquisa()" title="Limpar">üßπ</button>
                                    <button type="button" class="btn btn-filter d-flex align-items-center justify-content-center" onclick="enviarIntimacoes()" title="Enviar Intima√ß√µes" style="width: 48px; height: 48px; min-width: 48px; min-height: 48px; padding: 0;">üìß</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Tabela de Indica√ß√µes -->
                <div class="card">
                    <div class="card-body">
                        <% if (typeof indicacoes !== 'undefined' && indicacoes && indicacoes.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Institui√ß√£o</th>
                                        <th>Refer√™ncia</th>
                                        <th>Solicitado Em</th>
                                        <th>Data Limite</th>
                                        <th class="text-center">Status</th>
                                        <th class="text-center">Indicados</th>
                                        <th>Atualizado Em</th>
                                        <th>A√ß√µes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% indicacoes.forEach(indicacao => { %>
                                    <tr>
                                        <td><%= indicacao.instituicao_nome %></td>
                                        <td><%= indicacao.ano_referencia %></td>
                                        <td><%= indicacao.created_at ? new Date(indicacao.created_at).toLocaleDateString('pt-BR') : 'N/A' %></td>
                                        <td><%= indicacao.prazo_envio ? new Date(indicacao.prazo_envio).toLocaleDateString('pt-BR') : 'N/A' %></td>
                                        <td class="text-center">
                                            <% 
                                            let badgeClass = 'bg-secondary';
                                            if (indicacao.status === 'Pendente') badgeClass = 'bg-warning';
                                            else if (indicacao.status === 'Recebida') badgeClass = 'bg-success';
                                            else if (indicacao.status === 'Vencida') badgeClass = 'bg-danger';
                                            %>
                                            <span class="badge <%= badgeClass %>">
                                                <%= indicacao.status %>
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-info">
                                                <%= indicacao.total_jurados || 0 %>
                                            </span>
                                            <% if (indicacao.arquivo_lista) { %>
                                            <br><small class="text-success">üìÑ PDF</small>
                                            <% } %>
                                        </td>
                                        <td><%= new Date(indicacao.updated_at).toLocaleDateString('pt-BR') %></td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a href="/indicacoes/<%= indicacao.id %>" class="btn btn-view" title="Visualizar">üëÅÔ∏è</a>
                                                <a href="/indicacoes/<%= indicacao.id %>/editar" class="btn btn-edit" title="Editar">‚úèÔ∏è</a>
                                                <% if (indicacao.status === 'Pendente') { %>
                                                <button class="btn btn-filter" onclick="reenviarIntimacao(<%= indicacao.id %>)" title="Reenviar Intima√ß√£o">üìß</button>
                                                <% } %>
                                                <form method="POST" action="/indicacoes/<%= indicacao.id %>?_method=DELETE" class="d-inline">
                                                    <button type="submit" class="btn btn-delete" title="Excluir">üóëÔ∏è</button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                        <% } else { %>
                        <div class="text-center py-5">
                            <i class="fas fa-list fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Nenhuma indica√ß√£o cadastrada</h5>
                            <p class="text-muted">Comece criando a primeira indica√ß√£o de jurados.</p>
                            <a href="/indicacoes/novo" class="btn btn-primary">
                                ‚ûï Criar Primeira Indica√ß√£o
                            </a>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
            </div>
        </main>
    </div>

    <!-- Rodap√© -->
    <footer class="footer-custom">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0">Total de Jurados: <span id="total-jurados">-</span></p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">Total de Institui√ß√µes: <span id="total-instituicoes">-</span></p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/table-sort.js"></script>
    <script>
        // Fun√ß√µes JavaScript
        function limparPesquisa() {
            document.querySelector('form[action="/indicacoes"]').reset();
            window.location.href = '/indicacoes';
        }

        function enviarIntimacoes() {
            fetch('/indicacoes/enviar-intimacoes', {
                method: 'POST'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert(`Intima√ß√µes enviadas com sucesso! ${data.enviadas} e-mails enviados.`);
                    location.reload();
                } else {
                    alert('Erro ao enviar intima√ß√µes: ' + data.message);
                }
            })
            .catch(error => {
                alert('Erro ao enviar intima√ß√µes: ' + error.message);
            });
        }

        function reenviarIntimacao(id) {
            fetch(`/indicacoes/${id}/reenviar`, {
                method: 'POST'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Intima√ß√£o reenviada com sucesso!');
                    location.reload();
                } else {
                    alert('Erro ao reenviar intima√ß√£o: ' + data.message);
                }
            })
            .catch(error => {
                alert('Erro ao reenviar intima√ß√£o: ' + error.message);
            });
        }


        // Carregar totais no rodap√©
        fetch('/api/stats')
            .then(response => response.json())
            .then(data => {
                document.getElementById('total-jurados').textContent = data.totalJurados || 0;
                document.getElementById('total-instituicoes').textContent = data.totalInstituicoes || 0;
            })
            .catch(error => console.error('Erro ao carregar estat√≠sticas:', error));
    </script>
</body>
</html>
