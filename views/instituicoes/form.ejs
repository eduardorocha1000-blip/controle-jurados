            </div>
        </nav>
        <% } %>

        <!-- Conte√∫do Principal -->
        <main class="main-content">
            <% if (typeof messages !== 'undefined' && messages) { %>
                <% if (messages.success && messages.success.length > 0) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    ‚úÖ <%= messages.success[0] %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                <% } %>
                <% if (messages.error && messages.error.length > 0) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    ‚ùå <%= messages.error[0] %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                <% } %>
            <% } %>

            <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle btn-icon"></i><%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            <% } %>

            <div class="container-fluid">
                <!-- Cabe√ßalho -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h2><%= typeof instituicao !== 'undefined' && instituicao.id ? 'Editar Institui√ß√£o' : 'Nova Institui√ß√£o' %></h2>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Formul√°rio -->
                <div class="row">
                    <div class="col-lg-8">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0"></h5>
                            </div>
                            <div class="card-body">
                                <form method="POST" action="<%= typeof action !== 'undefined' ? action : '/instituicoes' %>">
                                    <% if (typeof instituicao !== 'undefined' && instituicao && instituicao.id) { %>
                                    <input type="hidden" name="_method" value="PUT">
                                    <% } %>
                                    
                                    <div class="row">
                                        <div class="col-md-8 mb-3">
                                            <label for="nome" class="form-label">Nome da Institui√ß√£o *</label>
                                            <input type="text" class="form-control" id="nome" name="nome" 
                                                   value="<%= typeof instituicao !== 'undefined' && instituicao ? instituicao.nome : '' %>" required>
                                        </div>
                                        
                                        <div class="col-md-4 mb-3">
                                            <label for="cnpj" class="form-label">CNPJ</label>
                                            <input type="text" class="form-control" id="cnpj" name="cnpj" 
                                                   value="<%= typeof instituicao !== 'undefined' && instituicao ? instituicao.cnpj : '' %>">
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label for="contato_nome" class="form-label">Nome do Contato *</label>
                                            <input type="text" class="form-control" id="contato_nome" name="contato_nome" 
                                                   value="<%= typeof instituicao !== 'undefined' && instituicao ? instituicao.contato_nome : 'Sr.(a). Diretor' %>" required>
                                        </div>
                                        
                                        <div class="col-md-6 mb-3">
                                            <label for="contato_email" class="form-label">E-mail do Contato *</label>
                                            <input type="email" class="form-control" id="contato_email" name="contato_email" 
                                                   value="<%= typeof instituicao !== 'undefined' && instituicao ? instituicao.contato_email : '' %>" required>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label for="contato_telefone" class="form-label">Telefone *</label>
                                            <input type="tel" class="form-control" id="contato_telefone" name="contato_telefone" 
                                                   value="<%= typeof instituicao !== 'undefined' && instituicao ? instituicao.contato_telefone : '' %>" required>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label for="ativo" class="form-label">Status *</label>
                                            <select class="form-select" id="ativo" name="ativo" required>
                                                <option value="Sim" <%= typeof instituicao !== 'undefined' && instituicao && instituicao.ativo === 'N√£o' ? '' : 'selected' %>>Ativo</option>
                                                <option value="N√£o" <%= typeof instituicao !== 'undefined' && instituicao && instituicao.ativo === 'N√£o' ? 'selected' : '' %>>Inativo</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-8 mb-3">
                                            <label for="endereco" class="form-label">Endere√ßo</label>
                                            <input type="text" class="form-control" id="endereco" name="endereco" 
                                                   value="<%= typeof instituicao !== 'undefined' && instituicao ? instituicao.endereco : '' %>">
                                        </div>
                                        
                                        <div class="col-md-4 mb-3">
                                            <label for="cep" class="form-label">CEP</label>
                                            <input type="text" class="form-control" id="cep" name="cep" 
                                                   value="<%= typeof instituicao !== 'undefined' && instituicao ? instituicao.cep : '88745-000' %>">
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label for="cidade" class="form-label">Cidade</label>
                                            <input type="text" class="form-control" id="cidade" name="cidade" 
                                                   value="<%= typeof instituicao !== 'undefined' && instituicao ? instituicao.cidade : 'Capivari de Baixo' %>">
                                        </div>
                                        
                                        <div class="col-md-6 mb-3">
                                            <label for="uf" class="form-label">UF</label>
                                            <input type="text" class="form-control" id="uf" name="uf" 
                                                   value="<%= typeof instituicao !== 'undefined' && instituicao ? instituicao.uf : 'SC' %>">
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label for="quantidade" class="form-label">Quantidade de Cidad√£os *</label>
                                            <input type="number" class="form-control" id="quantidade" name="quantidade" 
                                                   value="<%= typeof instituicao !== 'undefined' && instituicao ? instituicao.quantidade : '10' %>" min="1" max="99" required>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label for="observacoes" class="form-label">Observa√ß√µes</label>
                                            <textarea class="form-control" id="observacoes" name="observacoes" rows="3"><%= typeof instituicao !== 'undefined' && instituicao ? instituicao.observacoes : '' %></textarea>
                                        </div>
                                    </div>

                                    <div class="d-flex gap-2">
                                        <button type="submit" class="btn btn-save">üíæ</button>
                                        <a href="/instituicoes" class="btn btn-back" title="Voltar">‚¨ÖÔ∏è</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="card">
                            <div class="card-header">
