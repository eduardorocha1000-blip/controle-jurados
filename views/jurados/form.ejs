    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Valida√ß√£o de idade m√≠nima 18 anos no novo cadastro
            const form = document.querySelector('form[action*="/jurados"]');
            const nasc = document.getElementById('data_nascimento');
            if (form && nasc && !<%= typeof jurado !== 'undefined' && jurado && jurado.id ? 'true' : 'false' %>) {
                form.addEventListener('submit', function(e) {
                    const v = nasc.value;
                    if (v) {
                        const hoje = new Date();
                        const dn = new Date(v + 'T00:00:00');
                        let idade = hoje.getFullYear() - dn.getFullYear();
                        const m = hoje.getMonth() - dn.getMonth();
                        if (m < 0 || (m === 0 && hoje.getDate() < dn.getDate())) { idade--; }
                        if (idade < 18) {
                            e.preventDefault();
                            alert('Idade m√≠nima para jurado √© 18 anos. Cadastro n√£o permitido.');
                            nasc.focus();
                            return false;
                        }
                    }
                });
            }
            // Fun√ß√£o para aplicar m√°scara de CPF
            function applyCpfMask(input) {
                input.addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\D/g, '');
                    if (value.length > 11) value = value.slice(0, 11);
                    if (value.length > 9) {
                        value = value.replace(/^(\d{3})(\d{3})(\d{3})(\d{2})$/, '$1.$2.$3-$4');
                    } else if (value.length > 6) {
                        value = value.replace(/^(\d{3})(\d{3})(\d{3})$/, '$1.$2.$3');
                    } else if (value.length > 3) {
                        value = value.replace(/^(\d{3})(\d{3})$/, '$1.$2');
                    }
                    e.target.value = value;
                });
            }

            // Fun√ß√£o para aplicar m√°scara de telefone
            function applyPhoneMask(input) {
                input.addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\D/g, '');
                    if (value.length > 11) value = value.slice(0, 11);
                    if (value.length === 11) {
                        value = value.replace(/^(\d{2})(\d{5})(\d{4})$/, '($1) $2-$3');
                    } else if (value.length === 10) {
                        value = value.replace(/^(\d{2})(\d{4})(\d{4})$/, '($1) $2-$3');
                    } else if (value.length > 6) {
                        value = value.replace(/^(\d{2})(\d{4})(\d{0,4})$/, '($1) $2-$3');
                    } else if (value.length > 2) {
                        value = value.replace(/^(\d{2})(\d{0,5})$/, '($1) $2');
                    }
                    e.target.value = value;
                });
            }

            // Fun√ß√£o para aplicar m√°scara de CEP
            function applyCepMask(input) {
                input.addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\D/g, '');
                    if (value.length > 8) value = value.slice(0, 8);
                    if (value.length > 5) {
                        value = value.replace(/^(\d{5})(\d{3})$/, '$1-$2');
                    }
                    e.target.value = value;
                });
            }

            // Aplicar m√°scaras
            document.querySelectorAll('input[name="cpf"]').forEach(applyCpfMask);
            document.querySelectorAll('input[name="telefone"]').forEach(applyPhoneMask);
            document.querySelectorAll('input[name="cep"]').forEach(applyCepMask);

            // Drag & Drop foto
            const drop = document.getElementById('dropFoto');
            const inputFile = document.getElementById('foto');
            const preview = document.getElementById('previewFoto');
            if (drop && inputFile) {
                function openPicker(){ inputFile.click(); }
                drop.addEventListener('click', openPicker);
                drop.addEventListener('dragover', function(e){ e.preventDefault(); drop.classList.add('bg-light'); });
                drop.addEventListener('dragleave', function(){ drop.classList.remove('bg-light'); });
                drop.addEventListener('drop', function(e){
                    e.preventDefault();
                    drop.classList.remove('bg-light');
                    if (e.dataTransfer.files && e.dataTransfer.files[0]) {
                        inputFile.files = e.dataTransfer.files;
                        const file = e.dataTransfer.files[0];
                        const reader = new FileReader();
                        reader.onload = function(ev){
                            if (preview) { preview.src = ev.target.result; preview.style.display = 'block'; }
                            const hint = document.getElementById('dropFotoHint');
                            if (hint) hint.style.display = 'none';
                        };
                        reader.readAsDataURL(file);
                    }
                });
                inputFile.addEventListener('change', function(e){
                    const file = e.target.files && e.target.files[0];
                    if (file) {
                        const reader = new FileReader();
                        reader.onload = function(ev){
                            if (preview) { preview.src = ev.target.result; preview.style.display = 'block'; }
                            const hint = document.getElementById('dropFotoHint');
                            if (hint) hint.style.display = 'none';
                        };
                        reader.readAsDataURL(file);
                    }
                });
            }

            // Exibir idade ao lado da data de nascimento
            (function(){
                const nasc = document.getElementById('data_nascimento');
                const idadeEl = document.getElementById('idadeLabel');
                if (!nasc || !idadeEl) return;
                function calc() {
                    const v = nasc.value;
                    if (!v) { idadeEl.textContent=''; return; }
                    const hoje = new Date();
                    const dn = new Date(v + 'T00:00:00');
                    let idade = hoje.getFullYear() - dn.getFullYear();
                    const m = hoje.getMonth() - dn.getMonth();
                    if (m < 0 || (m === 0 && hoje.getDate() < dn.getDate())) { idade--; }
                    if (idade >= 0 && Number.isFinite(idade)) {
                        idadeEl.textContent = idade + ' anos';
                    } else {
                        idadeEl.textContent = '';
                    }
                }
                nasc.addEventListener('input', calc);
                calc();
            })();

            // Ocultar dica se j√° houver foto
            (function(){
                const preview = document.getElementById('previewFoto');
                const hint = document.getElementById('dropFotoHint');
                if (preview && hint && preview.style.display !== 'none') {
                    hint.style.display = 'none';
                }
            })();

            // Pr√©-preencher campos padr√£o se estiverem vazios
            const cepField = document.getElementById('cep');
            const cidadeField = document.getElementById('cidade');
            const ufField = document.getElementById('uf');
            
            if (cepField && !cepField.value) {
                cepField.value = '88745-000';
            }
            if (cidadeField && !cidadeField.value) {
                cidadeField.value = 'Capivari de Baixo';
            }
            if (ufField && !ufField.value) {
                ufField.value = 'SC';
            }

            // Converter inputs para mai√∫sculas, exceto email, password, tel, url
            document.querySelectorAll('input[type="text"], input[type="search"], textarea').forEach(function(input) {
                if (input.type !== 'email' && input.type !== 'password' && input.type !== 'tel' && input.type !== 'url') {
                    input.addEventListener('input', function() {
                        this.value = this.value.toUpperCase();
                    });
                }
            });

            // Fetch total de jurados e institui√ß√µes para o rodap√©
            fetch('/api/stats')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('total-jurados').textContent = data.totalJurados;
                    document.getElementById('total-instituicoes').textContent = data.totalInstituicoes;
                })
                .catch(error => console.error('Erro ao buscar estat√≠sticas:', error));
            
            // Inicializar estado dos campos ao carregar a p√°gina
            toggleMotivoField();
            toggleSuspensoField();
        });
        
        // Fun√ß√£o para controlar o campo Motivo baseado no Status
        function toggleMotivoField() {
            const statusField = document.getElementById('status');
            const motivoField = document.getElementById('motivo');
            const suspensoField = document.getElementById('suspenso_ate');
            
            if (statusField.value === 'Ativo') {
                motivoField.disabled = true;
                motivoField.value = '';
                suspensoField.disabled = true;
                suspensoField.value = '';
            } else {
                motivoField.disabled = false;
            }
        }
        
        // Fun√ß√£o para controlar o campo Suspenso At√© baseado no Motivo
        function toggleSuspensoField() {
            const motivoField = document.getElementById('motivo');
            const suspensoField = document.getElementById('suspenso_ate');
            
            if (motivoField.value === 'Tempor√°rio') {
                suspensoField.disabled = false;
                // Definir data m√≠nima como hoje
                const today = new Date().toISOString().split('T')[0];
                suspensoField.min = today;
            } else {
                suspensoField.disabled = true;
                suspensoField.value = '';
            }
        }
    </script>
</body>
</html>