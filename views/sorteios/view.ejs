<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css?v=<%= Date.now() %>">
</head>
<body>
    <!-- Cabe√ßalho -->
    <header class="header-custom">
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <img src="/images/logo-tjsc.png" alt="Logo TJSC" class="header-logo me-3">
                    <div>
                        <h1 class="header-title">Controle de Jurados</h1>
                        <p class="header-subtitle">Comarca de Capivari de Baixo</p>
                    </div>
                </div>
                <% if (typeof user !== 'undefined' && user) { %>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                        üë§ <%= user.nome %>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                        <li><a class="dropdown-item" href="/perfil">‚öôÔ∏è Perfil</a></li>
                        <% if (user.perfil === 'Administrador') { %>
                        <li><a class="dropdown-item" href="/usuarios">üë• Usu√°rios</a></li>
                        <% } %>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form action="/login/logout" method="POST" class="d-inline">
                                <button type="submit" class="dropdown-item">üö™ Sair</button>
                            </form>
                        </li>
                    </ul>
                </div>
                <% } %>
            </div>
        </div>
    </header>

    <div class="main-container">
        <% if (typeof user !== 'undefined' && user) { %>
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="p-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'dashboard' ? 'active' : '' %>" href="/dashboard">
                            üìä Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'juizes' ? 'active' : '' %>" href="/juizes">
                            ‚öñÔ∏è Ju√≠zes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'instituicoes' ? 'active' : '' %>" href="/instituicoes">
                            üè¢ Institui√ß√µes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'jurados' ? 'active' : '' %>" href="/jurados">
                            üë• Jurados
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'indicacoes' ? 'active' : '' %>" href="/indicacoes">
                            üìã Indica√ß√µes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'sorteios' ? 'active' : '' %>" href="/sorteios">
                            üé≤ Sorteios
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'cedulas' ? 'active' : '' %>" href="/cedulas">
                            üé´ C√©dulas
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'editais' ? 'active' : '' %>" href="/editais">
                            üìÑ Editais
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'emails' ? 'active' : '' %>" href="/emails">
                            üìß E-mails
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'relatorios' ? 'active' : '' %>" href="/relatorios">
                            üìä Relat√≥rios
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'backup' ? 'active' : '' %>" href="/backup">
                            üíæ Backup
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <% } %>

        <!-- Conte√∫do Principal -->
        <main class="main-content">
            <% if (typeof messages !== 'undefined' && messages) { %>
                <% if (messages.success && messages.success.length > 0) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    ‚úÖ <%= messages.success[0] %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                <% } %>
                <% if (messages.error && messages.error.length > 0) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    ‚ùå <%= messages.error[0] %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                <% } %>
            <% } %>

            <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle btn-icon"></i><%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            <% } %>

            <div class="container-fluid">
                <!-- Cabe√ßalho -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h2>Visualizar Sorteio</h2>
                                <p class="text-muted mb-0">Detalhes do sorteio</p>
                            </div>
                            <div>
                                <a href="/sorteios/<%= sorteio.id %>/editar" class="btn btn-edit me-2" title="Editar">‚úèÔ∏è</a>
                                <a href="/sorteios" class="btn btn-back" title="Voltar">‚¨ÖÔ∏è</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Conte√∫do -->
                <div class="row">
                    <div class="col-lg-8">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Dados do Sorteio</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">N√∫mero do Processo</label>
                                        <p class="form-control-plaintext"><%= sorteio.numero_processo || 'N/A' %></p>
                                    </div>
                                    
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Ano de Refer√™ncia</label>
                                        <p class="form-control-plaintext"><%= sorteio.ano_referencia %></p>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Juiz Respons√°vel</label>
                                        <p class="form-control-plaintext"><%= sorteio.juiz_nome || 'N/A' %></p>
                                    </div>
                                    
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Status</label>
                                        <p class="form-control-plaintext">
                                            <% 
                                            let badgeClass = 'bg-secondary';
                                            if (sorteio.status === 'Agendado') badgeClass = 'bg-warning';
                                            else if (sorteio.status === 'Realizado') badgeClass = 'bg-success';
                                            else if (sorteio.status === 'Cancelado') badgeClass = 'bg-danger';
                                            %>
                                            <span class="badge <%= badgeClass %>">
                                                <%= sorteio.status %>
                                            </span>
                                        </p>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Data de Realiza√ß√£o</label>
                                        <p class="form-control-plaintext"><%= sorteio.data_realizacao ? new Date(sorteio.data_realizacao + 'T00:00:00').toLocaleDateString('pt-BR') : 'N/A' %></p>
                                    </div>
                                    
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Hora do Sorteio</label>
                                        <p class="form-control-plaintext"><%= sorteio.hora_juri || 'N/A' %></p>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Data do J√∫ri</label>
                                        <p class="form-control-plaintext"><%= sorteio.data_juri ? new Date(sorteio.data_juri + 'T00:00:00').toLocaleDateString('pt-BR') : 'N/A' %></p>
                                    </div>
                                    
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Local do Sorteio</label>
                                        <p class="form-control-plaintext"><%= sorteio.local_sorteio || 'N/A' %></p>
                                    </div>
                                </div>
                                
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Observa√ß√µes</label>
                                    <p class="form-control-plaintext"><%= sorteio.observacoes || 'Nenhuma observa√ß√£o' %></p>
                                </div>
                            </div>
                        </div>

                        <!-- Lista de Jurados -->
                        <div class="card mt-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Jurados do Sorteio</h5>
                            </div>
                            <div class="card-body">
                                <% if (typeof jurados !== 'undefined' && jurados && jurados.length > 0) { %>
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Nome</th>
                                                <th>CPF</th>
                                                <th>Profiss√£o</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% jurados.forEach(jurado => { %>
                                            <tr>
                                                <td><%= jurado.nome_completo %></td>
                                                <td><%= jurado.cpf %></td>
                                                <td><%= jurado.profissao || 'N/A' %></td>
                                                <td>
                                                    <% 
                                                    let statusClass = 'bg-secondary';
                                                    if (jurado.status === 'titular') statusClass = 'bg-primary';
                                                    else if (jurado.status === 'suplente') statusClass = 'bg-info';
                                                    %>
                                                    <span class="badge <%= statusClass %>">
                                                        <%= jurado.status %>
                                                    </span>
                                                </td>
                                            </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                                <% } else { %>
                                <div class="text-center py-3">
                                    <p class="text-muted mb-0">Nenhum jurado cadastrado neste sorteio</p>
                                    <a href="/sorteios/<%= sorteio.id %>/jurados" class="btn btn-primary btn-sm mt-2">
                                        ‚ûï Adicionar Jurados
                                    </a>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Painel Lateral -->
                    <div class="col-lg-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Informa√ß√µes</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <h6>üìÖ Sobre Este Sorteio</h6>
                                    <p class="text-muted small mb-0">
                                        Este sorteio foi agendado para selecionar jurados para o j√∫ri.
                                    </p>
                                </div>
                                
                                <div class="mb-3">
                                    <h6>üë• Jurados</h6>
                                    <p class="text-muted small mb-0">
                                        <% if (typeof jurados !== 'undefined' && jurados && jurados.length > 0) { %>
                                            <%= jurados.length %> jurado(s) cadastrado(s) neste sorteio.
                                        <% } else { %>
                                            Nenhum jurado cadastrado ainda.
                                        <% } %>
                                    </p>
                                </div>
                                
                                <div class="mb-3">
                                    <h6>üìä Status</h6>
                                    <p class="text-muted small mb-0">
                                        <% if (sorteio.status === 'Agendado') { %>
                                            Sorteio agendado e aguardando realiza√ß√£o.
                                        <% } else if (sorteio.status === 'Realizado') { %>
                                            Sorteio j√° foi realizado.
                                        <% } else if (sorteio.status === 'Cancelado') { %>
                                            Sorteio foi cancelado.
                                        <% } else { %>
                                            Status n√£o definido.
                                        <% } %>
                                    </p>
                                </div>
                                
                                <div class="alert alert-info">
                                    <small>
                                        <strong>üí° Dica:</strong> Voc√™ pode editar este sorteio ou adicionar jurados clicando nos bot√µes acima.
                                    </small>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Card de A√ß√µes R√°pidas -->
                        <div class="card mt-3">
                            <div class="card-header">
                                <h5 class="card-title mb-0">A√ß√µes R√°pidas</h5>
                            </div>
                            <div class="card-body">
                                <div class="d-grid gap-2">
                                    <a href="/sorteios/<%= sorteio.id %>/editar" class="btn btn-warning">
                                        ‚úèÔ∏è
                                    </a>
                                    <% if (typeof jurados !== 'undefined' && jurados && jurados.length > 0) { %>
                                    <a href="/sorteios/<%= sorteio.id %>/jurados" class="btn btn-info">
                                        üë• Gerenciar Jurados
                                    </a>
                                    <% } else { %>
                                    <a href="/sorteios/<%= sorteio.id %>/jurados" class="btn btn-primary">
                                        ‚ûï Adicionar Jurados
                                    </a>
                                    <% } %>
                                    <a href="/sorteios" class="btn btn-secondary">
                                        ‚¨ÖÔ∏è
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Rodap√© -->
    <footer class="footer-custom mt-5">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0">¬© 2025 Tribunal de Justi√ßa de Santa Catarina - TJSC</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">Sistema de Controle de Jurados - Comarca de Capivari de Baixo</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
